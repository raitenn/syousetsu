<h1>新規小説作成ページ</h1>
<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>タイトル</h2>

<%= form_for(@book) do |f| %>
    <%= f.text_field :title %>



<h4>あらすじ</h4>
    
    <%= f.text_area :arasuji, :size => '150x10' %>
 
    


<h4>テキスト</h4>


    <%= f.text_area :body, :size => '180x50'%>
 
    <%= f.submit '投稿する' %>
<% end %>


